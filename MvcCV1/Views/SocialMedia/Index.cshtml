@using MvcCV1.Models.Entity;
@model List<SocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Skill List</h3>
                            </div>
                            <div class="card-body">
                                <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Ekle</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Sosical Media</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>

                                                <td>@item.SocialMediaID</td>
                                                <td>@item.Name</td>
                                                <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID/" class="btn btn-outline-warning"><i class="fas fa-trash"></i>Sil</a></td>
                                                <td><a href="/SocialMedia/EditSocialMedia/@item.SocialMediaID/" class="btn btn-outline-primary"><i class="fas fa-pencil-alt"></i>Güncelle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Sosyal Medya Ekleme Penceresi</h3>
                    </div>
                    <form method="post" action="/SocialMedia/AddSocialMedia">
                        <div class="modal-body">
                            <label>Social Media Name</label>
                            <input type="text" name="Name" class="form-control" />
                            <br />
                            <label>Link</label>
                            <input type="text" name="Link" class="form-control" />
                            <br />
                            <label>Icon</label>
                            <input type="text" name="Icon" class="form-control" />
                            <br />
                            <button class="btn btn-outline-info">Kaydet</button>
                            <br />
                            <br />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



