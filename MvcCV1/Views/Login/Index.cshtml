
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Sign Up Form</title>
    <link href="~/login-form-20/css/style1.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" />
</head>
<body>
    <div class="container">
        <div class="form-wrapper">
            <div class="banner">
                <h1>Hello, Friend!</h1>
                <p>Enter your personal details and start journey with us</p>
            </div>
            <div class="green-bg">
                <button class="btn btn-outline-primary" type="button">Giriş İçin Tıkla!</button>
            </div>
            <form class="signup-form" method="post">
                <h1>Create Account</h1>
                <div class="social-media">
                    <i class="fab fa-facebook-f"></i>
                    <i class="fab fa-instagram"></i>
                    <i class="fab fa-linkedin-in"></i>
                </div>
                <p>or use your email for registration</p>
                <div class="input-group">
                    <i class="fas fa-user"></i>
                    <input type="text" style="font-size:medium" class="form-control form-control-lg" id="exampleInputEmail1" name="UserName" placeholder="Kullanıcı Adınız">
                </div>
                <div class="input-group">
                    <i class="fas fa-lock"></i>
                    <input type="password" style="font-size:medium" class="form-control form-control-lg" id="exampleInputPassword1" name="Password" placeholder="Şifreniz">
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"> Giriş Yap </button>
                </div>
                @*<div class="text-center mt-4 font-weight-light" style="font-size:medium">
                    Bir Hesabın Yok Mu? <a href="/Admin/Index/" style="font-size:medium" class="text-primary"> Sign Up</a>
                </div>*@
            </form>
        </div>
    </div>
    <script src="~/login-form-20/js/script11.js"></script>
</body>
</html>

